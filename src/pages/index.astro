---
pageTitle: "Home";
import BaseLayoutWithoutNavAndFooter from "../layouts/BaseLayoutWithoutNavAndFooter.astro";
import "../styles/global.css";
---

<BaseLayoutWithoutNavAndFooter>
  <style>
	body {
		margin: 0;mt-4
		padding: 0;
	}
	
    /* Custom styles */
    .background-image {
      background-image: url("/delorean_logo.png");
      background-size: cover;
      background-position: center;
      height: 100vh; /* Adjust height as needed */
    }

    /* Hide navigation */
    .navbar {
      display: none;
    }

  </style>

  <!-- Container for the content -->
  <div class="background-image flex flex-col justify-start items-center h-full">
    <div class="text-center pt-10">
      <a
        href="/blog"
        class="mt-4 px-4 py-2 bg-[rgb(18,156,213)] font-bold uppercase text-white rounded-md hover:bg-blue-600"
        >Hop on in to the Future!</a
      >
    </div>
  </div>
</BaseLayoutWithoutNavAndFooter>
